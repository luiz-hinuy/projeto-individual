<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Booking</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    <div class="container">
        <h1>Edit Booking</h1>
        <form id="editBookingForm" action="/bookings/<%= booking.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="rooms_id">Room ID:</label>
                <input type="text" id="rooms_id" name="rooms_id" value="<%= booking.rooms_id %>" required>
            </div>
            <div class="form-group">
                <label for="user_id">User ID:</label>
                <input type="text" id="user_id" name="user_id" value="<%= booking.user_id %>" required>
            </div>
            <div class="form-group">
                <label for="start_time">Start Time:</label>
                <input type="datetime-local" id="start_time" name="start_time" value="<%= booking.start_time.toISOString().slice(0, 16) %>" required>
            </div>
            <div class="form-group">
                <label for="end_time">End Time:</label>
                <input type="datetime-local" id="end_time" name="end_time" value="<%= booking.end_time.toISOString().slice(0, 16) %>" required>
            </div>
            <button type="submit">Update Booking</button>
        </form>
    </div>
    <script src="/js/bookings.js"></script>
</body>
</html>